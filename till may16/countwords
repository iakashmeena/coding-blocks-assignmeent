char a1[100];
int n;
cin.getline(a1,100);
cin>>n;

int i=0;


 while(a1[i]!='\0')
       {
     i++;
 }
 int a=0;
int  r=(i-1)/2;
 while(a<=n)
{
    char temp;
    temp=a1[a];
    a1[a]=a1[i-1];
    a1[i-1]=temp;
    a++;
    i--;
}


cout<<a1;





return 0;
}
